<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Define the base application theme -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary branding color for the app -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Darker variant of the primary color for status bar, etc. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Accent color for highlights, such as buttons -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize other theme attributes as needed -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Define a variant of the theme for light mode, if needed -->
    <style name="Theme.MyApplication.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
